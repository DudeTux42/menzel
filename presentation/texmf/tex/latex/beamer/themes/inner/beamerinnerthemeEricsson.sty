\mode<presentation>

\newlength\authorwidth
\setlength\authorwidth{10.2cm}

\defbeamertemplate*{title page}{B1CustomNew theme}
{
    \vskip.3ex
    \usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle%
    \ifx\insertsubtitle\insertdate\@empty%
    \else%
      \vskip1ex%
      \usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle%
      \hfill\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertdate%
    \fi%
    \ifx\insertauthor\@empty%
    \else%
      \vskip4ex%
      \begin{beamercolorbox}[right,wd=\authorwidth]{author table}%
      \usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor%
      \end{beamercolorbox}
    \fi%
}

\setbeamertemplate{blocks}[rounded]
\setbeamertemplate{items}[ball]

\mode
<all>
