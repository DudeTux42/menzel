  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center,ignorebg]{title in head/foot}%
    \usebeamerfont{title in head/foot}\usebeamercolor{title in head/foot}\insertshorttitle
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,right,ignorebg]{frame number in head/foot}%
    \usebeamerfont{frame number in head/foot}\usebeamercolor{frame number in head/foot}\insertframenumber{}/\inserttotalframenumber\hspace*{2ex} 
  \end{beamercolorbox}}%
  \vskip2pt%
}

