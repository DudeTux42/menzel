\mode<presentation>

\input{colors}

% general colors
\setbeamercolor{structure}           {fg = b1blau}%
\setbeamercolor{normal text}         {fg = black}%
\setbeamercolor{frametitle}          {fg = b1blau}%
\setbeamercolor{frame number in foot}{fg = gray}%
\setbeamercolor{subtitle}            {fg = b1blau}%
\setbeamercolor{institute}           {fg = gray}%
\setbeamercolor{author}              {fg = black}%

\setbeamercolor{title in head/foot}{fg = gray}%
\setbeamercolor{author in head/foot}{fg = gray}%
\setbeamercolor{institute in head/foot}{fg = gray}%
\setbeamercolor{frame number in head/foot}{fg = gray}%

% alert color

% blocks
\setbeamercolor{block title}{use=structure,fg=white,bg=b1blau}
\setbeamercolor{block body}{fg=black,use=block title,bg=b1blau!10!white}

% items
\setbeamercolor{item}{fg=b1itemize}
\setbeamercolor{description item}{fg=b1blau}
\setbeamercolor{item projected}{fg=b1blau,bg=b1itemize}

\mode
<all>
